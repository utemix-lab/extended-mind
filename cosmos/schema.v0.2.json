{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Cosmos Map Schema v0.2",
  "type": "object",
  "required": ["version", "nodes", "edges"],
  "properties": {
    "version": { "type": "string" },
    "generated_at": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/$defs/node" }
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "#/$defs/edge" }
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "required": ["id", "label", "type", "status", "importance"],
      "properties": {
        "id": { "type": "string" },
        "label": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["project", "layer", "artifact", "actor", "system"]
        },
        "status": {
          "type": "string",
          "enum": ["draft", "active", "stable", "archived"]
        },
        "notes": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        },
        "importance": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "refs": {
          "type": "array",
          "items": { "$ref": "#/$defs/ref" }
        },
        "props": { "type": "object" },
        "props_meta": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/prop_meta" }
        }
      },
      "additionalProperties": false
    },
    "ref": {
      "type": "object",
      "required": ["kind", "title", "url"],
      "properties": {
        "kind": { "type": "string" },
        "title": { "type": "string" },
        "url": { "type": "string" }
      },
      "additionalProperties": false
    },
    "prop_meta": {
      "type": "object",
      "required": ["type", "description"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "number", "bool", "string[]", "number[]"]
        },
        "description": { "type": "string" }
      },
      "additionalProperties": false
    },
    "edge": {
      "type": "object",
      "required": ["source", "target", "kind", "weight", "directed"],
      "properties": {
        "id": { "type": "string" },
        "source": { "type": "string" },
        "target": { "type": "string" },
        "kind": { "type": "string" },
        "weight": {
          "type": "integer",
          "minimum": 1,
          "maximum": 5
        },
        "directed": { "type": "boolean" },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
